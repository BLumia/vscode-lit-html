{
    "name": "lit-html",
    "displayName": "lit-html",
    "description": "Syntax highlighting for html inside of JavaScript and TypeScript tagged template strings",
    "version": "1.4.2",
    "publisher": "bierner",
    "icon": "docs/logo.png",
    "galleryBanner": {
        "color": "#fcfcfc",
        "theme": "light"
    },
    "repository": {
        "url": "https://github.com/mjbvz/vscode-lit-html.git"
    },
    "bugs": {
        "url": "https://github.com/mjbvz/vscode-lit-html/issues"
    },
    "engines": {
        "vscode": "^1.15.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "lit-html",
        "javascript",
        "typescript",
        "html",
        "template"
    ],
    "contributes": {
        "grammars": [
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html",
                "path": "./syntaxes/lit-html.json",
                "embeddedLanguages": {
                    "meta.embedded.block.html": "html",
                    "meta.embedded.block.css": "css",
                    "source.css": "css"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html.quoted.string.injection",
                "path": "./syntaxes/lit-html-quoted-string-injection.json",
                "embeddedLanguages": {
                    "meta.template.expression.ts": "typescript"
                }
            },
            {
                "injectTo": [
                    "source.js",
                    "source.js.jsx",
                    "source.jsx",
                    "source.ts",
                    "source.tsx",
                    "text.html.basic"
                ],
                "scopeName": "inline.lit-html-svg",
                "path": "./syntaxes/lit-html-svg.json",
                "embeddedLanguages": {
                    "meta.embedded.block.svg": "xml"
                }
            }
        ],
        "typescriptServerPlugins": [
            {
                "name": "typescript-lit-html-plugin"
            }
        ]
    },
    "dependencies": {
        "typescript-lit-html-plugin": "0.3.1"
    }
}
